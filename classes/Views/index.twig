{% extends "base.twig" %}

{% block content %}
  {% include 'pendenciasTable.html' %}
{% endblock %}

{% block scripts %}
    <script>
        var pendencias = [];

        // script to show andamentos table on mouse over
        {% for pendencia in pendencias %}
            {% if pendencia.andamentos|length > 0 %}
              {% include 'eventListners.js' %}
            {% endif %}

            {% include 'modalListners.js' %}

            // save the form data in JS for later use
            {% include 'populatePendenciasVar.js' %}

        {% endfor %}

        {% include 'hideAndUnhide.js' %}
        {% include 'convertDateTime.js' %}
        {% include 'hideModals.js' %}
        {% include 'prePopulateForm.js' %}
        {% include 'populateDetailsPendencia.js' %}
    </script>
{% endblock %}

{% block modal %}
  <!-- Modal Adicionar andamento --> 
  {% include 'modalAdicionarAndamento.html' %}

  <!-- Modal editar pendência --> 
  {% include 'modalEditarPendencia.html' %}

  <!-- Modal adicionar pendência --> 
  {% include 'modalAdicionarPendencia.html' %}

  <!-- Modal fechar pendência --> 
  {% include 'modalFecharPendencia.html' %}

  <!-- Modal detalhes pendência --> 
  {% include 'modalDetalhesPendenciaOld.html' %}

{% endblock %}

{% block navbar %}
  {% include 'navbarIndex.html' %}
{% endblock %}

{% block bottombar %}
    {% include 'bottombar.html' %}
{% endblock %}